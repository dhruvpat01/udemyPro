<%-include("partials/header")%>
    
    <div class="container-fluid cont-login">
        <div class="row">
             

            <div class="col-sm-12 col-md-6 col-lg-7 right-side">

                <div class="login-form">
                    <h2 class="sign">Sign in to UdemyPro</h2>
                    <br>

                    <hr class="hr-text" data-content="OR">

                    <form action="login" method="POST">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="text" class="form-control " name="email" placeholder="Enter Email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter Password">
                        </div>
                        <button type="submit" class="btn btn-outline-success">Login</button>
                    </form>
                    <p class="mt-4">No Account? <a class="feat" href="register">Register</a>
                </div>

            </div>
            <div class="col-sm-12 col-md-6 col-lg-5 left-side d-none d-md-block">
                <div class="container">
                    <div class="row login-left">
                        <p class="brand-name"></p>
                        <p class="brand-desc">.</p>
                        <img class="img-fluid animated bounce infinite" src="">
                    </div>

                </div>
            </div>  
        </div>
    </div> 
</body>

</html>